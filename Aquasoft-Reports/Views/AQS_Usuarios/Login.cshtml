@model Aquasoft_Reports.Models.AQS_Usuario

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Inicio de sesión</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-warning" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong>@TempData["Mensaje"]</strong>
                </div>

            }
            @*Mensaje cuando el usuario fue creado*@
            @if (TempData["MensajeCreado"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong>@TempData["MensajeCreado"]</strong>
                </div>

            }
            <form asp-action="Login" class="FormularioLogin" method="post">

                <div class="form-group">
                    <label asp-for="Correo" class="control-label">Email</label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Contrasena" class="control-label">Password</label>
                    <input asp-for="Contrasena" class="form-control" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                    ¿No tiene cuenta?
                    <a class="" asp-area="" asp-controller="AQS_Usuarios" asp-action="CrearCuenta">Cree una.</a>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="col-sm-4">
        </div>
    </div>
</div>


